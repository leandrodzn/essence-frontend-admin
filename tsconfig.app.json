{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@axios": ["./src/config/axios"],
      "@stores/*": ["./src/stores/*"],
      "@views/*": ["./src/views/*"],
      "@forms/*": ["./src/forms/*"]
    }
  }
}
